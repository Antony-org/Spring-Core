<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">


    <!-- Lab 2 -->



    <bean id="address" class="org.example.Address">
        <constructor-arg value="wherever" />
        <property name="street" value="10880 Malibu Point" />
    </bean>

    <bean id="name" class="java.lang.String">
        <constructor-arg value="Tony Stark" />
    </bean>

    <!-- making User List -->
    <bean id="user" class="org.example.User" autowire="byName" init-method="init">
<!--        <constructor-arg ref="address" />-->
        <property name="emails">
            <list>
                <value>tony@starkindustries.com</value>
                <value>ironman@avengers.com</value>
                <value>tony.stark@shield.com</value>
            </list>
        </property>
    </bean>



    <bean id="getAddress" class="org.example.GetAddress">
        <property name="user" ref="user"/>
        <property name="user.address.street" value="idk"/>
    </bean>


    <!-- Define the User bean using the factory method -->
<!--    <bean id="user" factory-bean="userFactory" factory-method="createUser">-->
<!--        <constructor-arg value="tony" />-->
<!--        <constructor-arg value="stark" />-->
<!--    </bean>-->




    <!--    circular dependency-->
    <bean id="a" class="org.example.A" depends-on="b">
        <constructor-arg ref="b"/>
    </bean>

    <bean id="b" class="org.example.B">
        <property name="a" ref="a" />
    </bean>

</beans>